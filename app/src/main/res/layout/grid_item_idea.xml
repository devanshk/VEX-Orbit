<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_activated">

    <ImageView
        android:id="@+id/idea_background"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@color/delete_button_color"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/idea_image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_margin="5dp"/>

    <ProgressBar
        android:id="@+id/idea_progress_bar"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:indeterminate="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/idea_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gear"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:textSize="20sp"
        android:layout_alignBottom="@id/idea_image"
        android:layout_alignRight="@id/idea_image"
        android:layout_margin="6dp"/>

    <TextView
        android:id="@+id/idea_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Holonomic"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:textSize="30sp"
        android:layout_marginBottom="-15dp"
        android:layout_above="@id/idea_type"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>